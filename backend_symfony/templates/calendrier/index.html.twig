{% extends 'base.html.twig' %}
{% block title %}Calendrier index{% endblock %}
{% block body %}
    <h1>Calendrier index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date</th>
                <th>HD</th>
                <th>HF</th>
                <th>Duree</th>
                <th>Salle</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for calendrier in calendriers %}
            <tr>
                <td>{{ calendrier.id }}</td>
                <td>{{ calendrier.date ? calendrier.date|date('Y-m-d') : '' }}</td>
                <td>{{ calendrier.HD }}</td>
                <td>{{ calendrier.HF }}</td>
                <td>{{ calendrier.duree }}</td>
                <td>{{ calendrier.salle ? calendrier.salle.nomS : 'No Salle assigned' }}</td>
                <td>
                    <a href="{{ path('app_calendrier_show', {'id': calendrier.id}) }}">show</a>
                    <a href="{{ path('app_calendrier_edit', {'id': calendrier.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_calendrier_new') }}">Create new</a>
{% endblock %}
